config wifi-device 'radio0'
        option type 'mac80211'
        option path 'pci0000:00/0000:00:11.0'
        list ht_capab 'SHORT-GI-40'
        list ht_capab 'TX-STBC'
        list ht_capab 'RX-STBC1'
        list ht_capab 'DSSS_CCK-40'
        option country 'DE'
        option distance '20'
        option txpower '20'
        option hwmode '11g'
        option htmode 'HT40'
        option channel '11'

